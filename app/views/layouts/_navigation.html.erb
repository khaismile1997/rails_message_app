<div class="right menu">
  <div class="ui dropdown item">
    <%= current_user ? current_user.username : "Account" %> <i class="dropdown icon"></i>
    <div class="menu">
      <% if current_user %>
        <%= link_to "Profile", user_path(current_user), class: "item" %>
        <%= link_to "Change password", change_password_path, class: "item" %>
        <%= link_to "Logout", logout_path, class: "item", method: :delete %>
      <% else %>
        <%= link_to "Login", login_path, class: "item" %>
        <%= link_to "Sign Up", signup_path, class: "item" %>
      <% end %>
    </div>
  </div>
  <div class="item">
      <div class="ui primary button">Sign Up</div>
  </div>
</div>